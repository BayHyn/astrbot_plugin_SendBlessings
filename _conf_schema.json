{
    "enabled": {
        "description": "是否启用插件",
        "type": "bool",
        "default": true
    },
    "openrouter_api_keys": {
        "description": "OpenRouter API 密钥列表",
        "type": "list",
        "hint": "请前往 https://openrouter.ai/ 注册账号，并获取多个 OpenRouter API Key。支持多个密钥自动轮换，当一个密钥额度耗尽时会自动切换到下一个",
        "default": [
            "sk-or-v1-abc-123"
        ],
        "obvious_hint": true
    },
    "custom_api_base": {
        "description": "自定义 API Base URL（可选）",
        "type": "string",
        "hint": "自定义的 API 基础地址，如果不填写则使用默认的 OpenRouter API 地址。例如：https://api.openrouter.ai",
        "default": "",
        "obvious_hint": false
    },
    "model_name": {
        "description": "使用的模型名称",
        "type": "string",
        "hint": "OpenRouter 支持的图像生成模型，例如：google/gemini-2.5-flash-image-preview:free",
        "default": "google/gemini-2.5-flash-image-preview:free",
        "obvious_hint": true
    },
    "max_retry_attempts": {
        "description": "每个API密钥的最大重试次数",
        "type": "int",
        "hint": "当API请求失败时，每个密钥最多重试几次。推荐2-5次。",
        "default": 3
    },
    "holidays_file": {
        "description": "节假日数据文件名",
        "type": "string",
        "default": "holidays.json"
    },
    "target_sessions": {
        "description": "需要发送祝福的目标会话列表",
        "type": "list",
        "hint": "配置需要自动发送祝福的群聊或私聊。请填写平台、类型和ID。",
        "default": [],
        "items": {
            "type": "object",
            "items": {
                "platform": {
                    "description": "平台名称",
                    "type": "string",
                    "default": "aiocqhttp",
                    "options": ["aiocqhttp", "telegram", "qq_official", "feishu", "wechat", "dingtalk"]
                },
                "type": {
                    "description": "会话类型",
                    "type": "string",
                    "default": "group",
                    "options": ["group", "private"]
                },
                "id": {
                    "description": "群号或QQ号",
                    "type": "string",
                    "default": ""
                }
            }
        }
    },
    "nap_server_address": {
        "description": "（可选）NAP cat 服务地址，用于跨服务器传输文件",
        "type": "string",
        "default": "localhost"
    },
    "nap_server_port": {
        "description": "（可选）NAP cat 文件接收端口",
        "type": "int",
        "default": 3658
    },
    "reference_images": {
        "description": "参考图生成配置",
        "type": "object",
        "items": {
            "enabled": {
                "description": "是否启用参考图功能",
                "type": "bool",
                "default": false
            },
            "image_paths": {
                "description": "参考图文件路径列表（相对于插件目录）",
                "type": "list",
                "default": []
            },
            "max_images": {
                "description": "最多使用的参考图数量",
                "type": "int",
                "default": 3
            }
        }
    }
}